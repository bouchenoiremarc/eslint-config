{
  "name": "@bouchenoiremarc/eslint-config",
  "version": "2.1.0",
  "description": "My personal ESLint configurations.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/eslint-config",
  "keywords": [
    "eslint",
    "config"
  ],
  "files": [
    "index.js",
    "jest.js",
    "react.js"
  ],
  "main": "index.js",
  "prettier": "@bouchenoiremarc/prettier-config",
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "clean": "rimraf node_modules",
    "lint": "eslint '**/*.js' --fix",
    "release": "yarn login && np --no-tests"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-typescript-sort-keys": "^2.0.0",
    "eslint-plugin-unicorn": "^38.0.1",
    "eslint-plugin-unused-imports": "^2.0.0"
  },
  "devDependencies": {
    "@bouchenoiremarc/prettier-config": "^1.1.0",
    "eslint": "^8.2.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "husky": "4.3.8",
    "lint-staged": "^12.0.3",
    "np": "^7.5.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "prettier": ">=2.0.0",
    "typescript": ">=4.0.0"
  }
}
